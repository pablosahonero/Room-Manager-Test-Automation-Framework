<?xml version="1.0" encoding="UTF-8"?>

<suite name="Room Manager ADMIN Acceptance Test Suite" parallel="false">
  <listeners>
    <listener class-name="org.uncommons.reportng.HTMLReporter"/>
    <listener class-name="org.uncommons.reportng.JUnitXMLReporter"/>
  </listeners>
  <test name="Verify a User can login">
    <classes>
      <class name="org.roommanager.test.admin.login.VerifyUserLogin"/>
    </classes>
  </test>
  <test name="Verify a resource can be created">
    <classes>
      <class name="org.roommanager.test.admin.resource.VerifyResourceIsCreated"/>
    </classes>
  </test>
  <test name="Verify a Resource can be deleted">
    <classes>
      <class name="org.roommanager.test.admin.resource.VerifyResourceIsRemoved"/>    
    </classes>
  </test>
  <test name="Verify a Resource can be updated">
    <classes>
      <class name="org.roommanager.test.admin.resource.VerifyResourceIsUpdated"/>    
    </classes>
  </test>
</suite>    
